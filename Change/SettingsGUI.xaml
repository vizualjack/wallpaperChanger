<Window x:Class="WallpaperChanger.Change.SettingsGUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WallpaperChanger.Change"
        mc:Ignorable="d"
        Title="Wallpaper Changer - Settings" Height="110" Width="250" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Closing="Window_Closing" SourceInitialized="Window_SourceInitialized">
    <Grid>
        <Label Content="Change Interval (Secs):" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="26"/>
        <TextBox x:Name="changeInterval" HorizontalAlignment="Left" Margin="144,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="60" PreviewTextInput="TextBox_PreviewTextInput"/>
        <Button Content="Save" HorizontalAlignment="Center" Margin="0,0,0,10" VerticalAlignment="Bottom" Width="230" Click="Button_Click"/>

    </Grid>
</Window>
